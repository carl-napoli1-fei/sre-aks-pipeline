name: Process azure image push

# This workflow is triggered on new mabl insights
on: [repository_dispatch]

jobs:
  build:
    name: Process azure image push
    runs-on: ubuntu-latest
    steps:
      # Add you custom logic below this line - example below
      - name: Print event type
        run: echo 'event_type:${{ github.event.event_type }} name:${{ github.event_name }}'              # Will be 'azure_image_push'
      - name: Print ARC details
        run: echo 'id:${{ github.event.client_payload.id }} type:${{ github.event.client_payload.action }}'
      - name: Print ARC payload as JSON
        run: echo 'acr payload: ${{ toJson(github.event.client_payload) }}'
